# iTraffic RPA Configuration
ITRAFFIC_LOGIN_URL=https://your-itraffic-url.com/login
ITRAFFIC_HOME_URL=https://your-itraffic-url.com/home
ITRAFFIC_USER=your_username
ITRAFFIC_PASSWORD=your_password

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini

# Azure Computer Vision Configuration (for OCR)
AZURE_COMPUTER_VISION_ENDPOINT=https://your-computer-vision-endpoint.cognitiveservices.azure.com/

# Image Hash Configuration
# Similarity threshold for filtering duplicate/similar images (0-100, default: 85)
# Higher values = more strict (only very similar images are filtered)
# Lower values = more lenient (more images are considered similar)
# Uses sharp library (pure Node.js, no system dependencies required)
IMAGE_SIMILARITY_THRESHOLD=85

# Server Configuration
PORT=3001
CORS_ORIGIN=https://localhost:3000

# Playwright Configuration
# Set to 'false' to see the browser window (for debugging)
# HEADLESS=true

# Cosmos DB Configuration (for master data)
COSMOS_DB_ENDPOINT=https://your-cosmosdb-account.documents.azure.com:443/
COSMOS_DB_KEY=your_cosmos_db_primary_key_here
COSMOS_DB_DATABASE_ID=iTrafficDB

# MySQL Configuration (Azure) - for master data
MYSQL_HOST=your-mysql-server.mysql.database.azure.com
MYSQL_PORT=3306
MYSQL_USER=your_mysql_user@your-mysql-server
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=iTrafficDB
MYSQL_SSL=true
